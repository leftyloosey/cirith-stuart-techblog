<div class="card mt-3">
  <div class="card-header">
   <b> {{ post.title }} </b>
  </div>
  <div class="card-body">
    <i class="card-text">posted by {{ post.user.name }} on {{format_date post.date_created}}</i>
    <p></p>
    <p class="card-text">{{ post.body }}</p>
    
  </div>
</div>

  <div class="col-md-6 text-black bg-light">
    

    <form class="form new-post-form">
      <div class="form-group">
        <b> Edit: </b>
        <p></p>
        {{!-- <label for="project-name">post title:</label> --}}
        <input class="form-input" type="text" id="post-title" name="post-title" placeholder="{{ post.title }}"/>
      </div>

      <div class="form-group">
        {{!-- <label for="project-desc">post body:</label> --}}
        <textarea class="form-input" id="post-body" name="post-body" placeholder="{{ post.body }}"></textarea>
      </div>
      <div class="form-group">
        <button data-id="{{ post.id }}" id="edit-button" type="submit" class="btn btn-primary">Edit</button>
      </div>
    </form>
  </div>

