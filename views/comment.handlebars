<div class="card mt-3">
  <div class="card-header">
   <b> {{ post.title }} </b>
  </div>
  <div class="card-body">
    <i class="card-text">posted by {{ post.user.name }} on {{format_date post.date_created}}</i>
    <p></p>
    <p class="card-text">{{ post.body }}</p>
    
  </div>
</div>

  <div class="col-md-6 text-black bg-light">
    

    <form class="form new-post-form">
      <div class="form-group">
     
        <p></p>

      <div class="form-group">
        {{!-- <label for="project-desc">post body:</label> --}}
        <textarea class="form-input" id="comment-body" name="post-body" placeholder="add comment"></textarea>
      </div>
      <div class="form-group">
        <button data-id="{{ post.id }}" id="comment-button" type="submit" class="btn btn-primary">Comment</button>
      </div>
    </form>
  </div>

